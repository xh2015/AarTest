<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/demand_main_rl"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item_bg"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <View
        android:id="@+id/un_finish_demand_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.4"
        android:background="@color/grey_d6"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15">

            <TextView
                android:id="@+id/demand_code_tv"
                style="@style/h3_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_18"
                android:paddingRight="@dimen/dp_30"/>

            <TextView
                android:id="@+id/demand_origin_tv"
                style="@style/other_tip_text_style"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:padding="@dimen/dp_3"/>


            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/demand_status_tv"
                style="@style/tag_text_style"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/demand_type_tv"
                style="@style/h5_text_style"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/demand_date_tv"
                style="@style/content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_18">

            <TextView
                android:id="@+id/demand_describe_tv"
                style="@style/h5_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/demand_related_order_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                style="@style/content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demand_relate_work_order_title_tip"/>

            <TextView
                android:id="@+id/demand_related_order_tv"
                style="@style/h5_text_style"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>

        <View
            android:id="@+id/center_line_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.4"
            android:background="@color/grey_d6"/>

        <LinearLayout
            android:id="@+id/ll_quick_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/switch_to_detail_tv"
                style="@style/h4_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/demand_look_tip"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_right"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/sp_14"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bottom_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.4"
        android:background="@color/grey_d6"/>

    <View
        android:id="@+id/view_placeholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_13"
        android:background="@color/app_bg"/>

</LinearLayout>