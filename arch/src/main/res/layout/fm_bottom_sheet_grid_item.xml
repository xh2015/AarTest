<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.dialog.QMUIBottomSheetItemView xmlns:android="http://schemas.android.com/apk/res/android"
                                                         android:layout_width="wrap_content"
                                                         android:layout_height="match_parent"
                                                         android:gravity="center"
                                                         android:orientation="vertical">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/grid_item_image"
        android:layout_width="@dimen/dp_53"
        android:layout_height="@dimen/dp_53"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/grid_item_title"
        style="@style/h3_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingTop="@dimen/dp_12"/>

</com.qmuiteam.qmui.widget.dialog.QMUIBottomSheetItemView>