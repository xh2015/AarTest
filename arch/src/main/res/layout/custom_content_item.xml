<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_title"
            style="@style/h3_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_6"
            android:text="*"
            android:textColor="@color/red"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_tip"
            style="@style/h3_text_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:textColorHint="@color/grey_c"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_input"
            style="@style/h3_text_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:textColorHint="@color/grey_c"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/tip_icon"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_next_arrow"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/clear_icon_iv"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_delete_et_selector"
            android:padding="@dimen/dp_2"
            android:scaleType="center"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:id="@+id/dash_line"
        style="@style/dash_line_style"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"/>

    <View
        android:id="@+id/line"
        style="@style/secant_line_style"
        android:visibility="gone"/>

</merge>